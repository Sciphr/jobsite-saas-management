# Deployment Automation Configuration
# Copy this to .env.local and configure for your environment

# Base deployment directory (where customer apps will be deployed)
DEPLOYMENTS_BASE_DIR=/home/deployments

# Git repository URL for your main application
MAIN_APP_GIT_URL=https://github.com/yourusername/jobsite-main.git

# Base port for deployments (will auto-increment: 3001, 3002, 3003, etc.)
DEPLOYMENT_BASE_PORT=3001

# Your domain for customer subdomains
BASE_DOMAIN=yourdomain.com

# Database configuration for customer databases
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Shared secrets that all customer installations will use
SHARED_NEXTAUTH_SECRET=your-shared-nextauth-secret-here
SHARED_JWT_SECRET=your-shared-jwt-secret-here
SHARED_ENCRYPTION_KEY=your-shared-encryption-key-here

# Management database connection (for this management app)
MANAGEMENT_DATABASE_URL=postgresql://user:password@localhost:5432/saas_management
MANAGEMENT_API_KEY=your-management-api-key

# Email configuration (shared across customer installations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Additional configuration
NODE_ENV=production